<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pascalso.tester" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.example.pascalso.tester.Application"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>

        <activity android:name=".StudentActivity"/>

        <activity
            android:name=".SelectedImageFragment"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>

        <activity android:name=".AccessGalleryActivity"/>

        <activity android:name=".PhotoInfoFragment"/>

        <activity android:name=".NewUserActivity"/>

        <activity
            android:name=".ViewPhoto"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            />

        <activity android:name=".StudentInfo"/>

        <activity android:name=".AnswerFragment"/>

        <activity android:name=".TutorInfo"/>

        <activity android:name=".UserVerification"/>

        <activity android:name=".LoginActivity"/>

        <activity android:name=".CardView"/>

        <activity android:name=".TutorActivity"/>


    </application>

</manifest>
